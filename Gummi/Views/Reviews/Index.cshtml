@model IEnumerable<Gummi.Models.Review>

@{
    ViewData["Title"] = "Review";

}


@using System.Security.Claims

<div class="contentbackground">
<h3>Reviews</h3>
<table class="table table-sm table-hover table-dark">
    <tr>
        <th>
            Product
        </th>
        <th>
            Author
        </th>
        <th>
            Review
        </th>
        <th>
            Rating
        </th>
        <th></th>
    </tr>

    @foreach (var listReview in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelReview => listReview.Product.Name)
            </td>
            <td>
                @Html.DisplayFor(modelReview => listReview.ReviewInfo)
            </td>
            <td>
                @Html.DisplayFor(modelReview => listReview.Description)
            </td>
            <td>
                @Html.DisplayFor(modelReview => listReview.Rating)
            </td>
            <td class="cellright">
                @Html.ActionLink("Edit", "Edit", new { id = listReview.ReviewId }) |
                @Html.ActionLink("Details", "Details", new { id = listReview.ReviewId }) |
                <span class="deletelink"><a>
                @Html.ActionLink("Delete", "Delete", new { id = listReview.ReviewId })
                </a></span>
            </td>
        </tr>
    }
</table>
<p>
    @Html.ActionLink("Add Review", "Create")
</p>
</div>
